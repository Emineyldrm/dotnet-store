@model List<Slider>
                        <div id="slider" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @{
                                    int y=0;
                                    foreach(var slide in Model){
                                        <button type="button" data-bs-target="#slider" data-bs-slide-to="@slide.Index" class="@(y==0 ? "active":"")"></button>
                                        y +=1;
                                    }
                                }                                
                                
                            </div>
                            <div class="carousel-inner">
                                @{                                    
                                    foreach(var slide in Model){                                
                                        <div class="carousel-item @(slide.Index==0 ? "active":"")">
                                        <img src="~/img/@slide.Resim" alt="@slide.Baslik" class="d-block w-100">
                                        </div>
                                    }
                                }                                
                            </div>
                            <button type="button" class="carousel-control-prev" data-bs-target="#slider" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button type="button" class="carousel-control-next" data-bs-target="#slider" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>