@model UrunCreateModel
@{
    Layout = "_AdminLayout";
}
<div class="row">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Ürün Ekle</h5>
                        <a asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                        @*enctype="multipart/form-data" bilgisi formda dosya bilgisi taşınacağının bilgisi*@
                            <div class="row mb-3">
                                <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="UrunAdi" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="urunAciklama" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <textarea asp-for="urunAciklama" rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UrunFiyat" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="UrunFiyat" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UrunAktif" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="UrunAktif" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UrunAnasayfa" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="UrunAnasayfa" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="UrunResim" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="UrunResim" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori</label>
                                <div class="col-sm-10">
                                    @* <select asp-for="KategoriId" class="form-select"> *@
                                    <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                                        @* Dinamik select kontrolü *@
                                        <option value="" selected>Seçiniz</option>                                                                              
                                            @* @foreach(var m in (List<Kategori>)ViewData["Kategoriler"]!){
                                                <option value="@m.Id">@m.KategoriAdi</option>                                                
                                            } *@


                                            @* @foreach(var m in ViewBag.Kategoriler){
                                                <option value="@m.Id">@m.KategoriAdi</option>                                                
                                            } *@
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    